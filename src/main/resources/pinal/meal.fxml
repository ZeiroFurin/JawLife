                                            <VBox styleClass="meal-entry">
                                                <children>
                                                    <HBox alignment="CENTER_LEFT" spacing="10.0">
                                                        <children>
                                                            <Region prefHeight="50.0" prefWidth="50.0" styleClass="meal-image-placeholder" />
