<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<VBox alignment="CENTER" prefHeight="800.0" prefWidth="1280.0" spacing="30.0" styleClass="root" stylesheets="@timer.css" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="pinal.TimerController">
    <children>
        <Label fx:id="exerciseNameLabel" styleClass="exercise-title" text="Running" />
        <Label fx:id="timerLabel" styleClass="timer-text" text="30:00" />

        <HBox alignment="CENTER" spacing="20.0">
            <children>
                <Button fx:id="startButton" onAction="#handleStartClick" styleClass="start-button" text="START" />
                <Button fx:id="stopButton" onAction="#handleStopClick" styleClass="stop-button" text="STOP" />
                <Button fx:id="finishButton" onAction="#handleFinishClick" styleClass="finish-button" text="FINISH" />
            </children>
        </HBox>

        <Button fx:id="backButton" onAction="#handleBackClick" styleClass="back-button" text="Back to Exercises" />
    </children>
    <padding>
        <Insets bottom="50.0" left="50.0" right="50.0" top="50.0" />
    </padding>
</VBox>