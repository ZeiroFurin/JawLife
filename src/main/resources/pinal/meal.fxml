                                                            <Region prefHeight="50.0" prefWidth="50.0" styleClass="meal-image-placeholder" />
                                                            <VBox>
                                                                <children>
                                                                    <Label styleClass="meal-name" text="Sup Sayuran" />
                                                                    <Label styleClass="meal-calories" text="250 kalori" />
